{
  "manifest_version": 2,

  "name": "Openpilot Supported Cars (Unofficial)",
  "description": "Indicate if a car is supported by Openpilot.",
  "version": "1.2",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },  

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "activeTab", 
    "https://autotrader.ca/",
    "https://curbie.ca/"
  ]
}